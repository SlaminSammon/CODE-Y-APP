<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:stretchColumns="2"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_my"
    tools:context=".MyActivity">

    <TextView
        android:text="@string/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100sp"
        android:id="@+id/app_nameText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_centerInParent="true"/>
    <ImageView
        android:src="@drawable/codypus"
        android:layout_width="200dp"
        android:layout_height="217dp"
        android:id="@+id/logo_image"
        android:cropToPadding="false"
        android:padding="10dp"
        android:layout_below="@+id/app_nameText"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/button_DataStructures"
        android:clickable="true"
        android:layout_marginTop="229dp"
        android:id="@+id/dataStructures_Button"
        android:layout_below="@+id/app_nameText"
        android:layout_alignLeft="@+id/algorithms_Button"
        android:layout_alignStart="@+id/algorithms_Button"
        android:onClick="DataStructures"
        />
    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/button_Algorithms"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:id="@+id/algorithms_Button"
        android:layout_below="@id/dataStructures_Button"
        android:onClick="Algorithms"/>
    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/button_Problems"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:id="@+id/problems_Button"
        android:layout_below="@id/algorithms_Button"
        android:onClick="CommonProblems"/>
</RelativeLayout>
